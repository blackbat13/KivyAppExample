<LoginScreen@Screen>
    name: 'login_screen'
    username_text_input: username_ti
    password_text_input: password_ti

    BoxLayout:
        orientation: 'vertical'

        Button:
            name: 'back_button'
            text: 'Back'
            on_release: root.back_button_pressed()

        TextInput:
            id: username_ti
            multiline: False

        TextInput:
            id: password_ti
            multiline: False
            password: True

        Button:
            name: 'login_button'
            text: 'Login'
            on_release: root.login_button_pressed()