<Row@BoxLayout>:
    orientation: 'horizontal'
    value: ''
    Label:
        text: root.value
    Button:
        name: 'first_button'
        text: 'First'
        on_release: root.first_button_pressed()
    Button:
        name: 'delete_button'
        text: 'Delete'
        on_release: root.delete_button_pressed()

<RvScreen@Screen>
    name: 'rv_screen'
    rv: rv

    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)