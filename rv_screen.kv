<Row@BoxLayout>:
    orientation: 'horizontal'
    value: ''
    Label:
        text: root.value
    Button:
        name: 'first_button'
        text: 'First'
    Button:
        name: 'second_button'
        text: 'Second'

<RvScreen@Screen>
    name: 'rv_screen'
    rv: rv

    BoxLayout:
        orientation: 'vertical'
        Button:
            name: 'populate_button'
            text: 'populate'
            on_release: root.populate_button_pressed()
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)